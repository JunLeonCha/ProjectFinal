@page "/users"

<PageTitle>Home</PageTitle>

<h1>Liste des utilisateurs</h1>

<div class="users">
    <div class="mb-3">
        <NavLink href="/user/create" class="btn btn-primary">Ajouter un utilisateur</NavLink>
    </div>

    <div class="row">
        @if (this.usersCollection.Any())
        {
            @foreach (var item in this.usersCollection)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@item.Firstname @item.Lastname</h5>
                            <h6 class="card-subtitle text-muted">@item.Email</h6>
                            <p class="card-text">
                                <strong>Adresse :</strong> @item.Address<br />
                                <strong>Téléphone :</strong> @item.Phone<br />
                                <strong>Date de naissance :</strong> @item.DateOfBirth.ToShortDateString()<br />
                                <strong>Centres d'intérêt :</strong>
                                @if (item.Interests?.Any() == true)
                                {
                                    <ul>
                                        @foreach (var interest in item.Interests)
                                        {
                                            <li>@interest</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <em>Aucun</em>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>Aucun utilisateur trouvé.</p>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-subtitle {
        margin-bottom: 10px;
        color: #6c757d;
    }

    .card-text {
        font-size: 0.95rem;
    }

    ul {
        padding-left: 20px;
        margin-top: 5px;
    }
</style>
